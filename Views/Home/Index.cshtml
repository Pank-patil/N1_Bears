@section Scripts {
    <script>
        function showCardSide(side) {
            const flipCard = document.getElementById('infoFlipCard');
            const flipInner = document.getElementById('flipCardInner');
            if (side === 'about') {
                flipInner.style.transform = 'rotateY(0deg)';
            } else if (side === 'collection') {
                flipInner.style.transform = 'rotateY(180deg)';
            }
        }

        function togglePopup() {
            const popup = document.getElementById('collectionPopup');
            popup.style.display = popup.style.display === 'block' ? 'none' : 'block';
        }
    </script>
    <script>
        const cards = [
            '/Images/NFT1.jpg', '/Images/NFT1.jpg',
            '/Images/NFT2.jpg', '/Images/NFT2.jpg',
            '/Images/NFT3.jpg', '/Images/NFT3.jpg',
            '/Images/NFT4.jpg', '/Images/NFT4.jpg',
            '/Images/NFT5.jpg', '/Images/NFT5.jpg',
            '/Images/NFT6.jpg', '/Images/NFT6.jpg',
        ];

        let flippedCards = [];
        let matchedPairs = 0;
        const gameContainer = document.getElementById('memory-game');

        function shuffle(array) {
            return array.sort(() => 0.5 - Math.random());
        }

        function createCard(imgSrc) {
            const card = document.createElement('div');
            card.classList.add('memory-card');
            card.innerHTML = `
                <div class="front"></div>
                <div class="back">
                    <img src="${imgSrc}" alt="NFT" />
                </div>`;
            card.addEventListener('click', () => flipCard(card, imgSrc));
            return card;
        }

               function flipCard(card, imgSrc) {
            try {
                if (card.classList.contains('flip') || flippedCards.length === 2) return;

                card.classList.add('flip');
                flippedCards.push({ card, imgSrc });

                if (flippedCards.length === 2) {
                    if (flippedCards[0].imgSrc === flippedCards[1].imgSrc) {
                        matchedPairs++;
                        flippedCards = [];
                        if (matchedPairs === cards.length / 2) {
                            setTimeout(() => {
                                window.location.href = '/Home/JoinWL';
                            }, 300);
                        }
                    } else {
                        setTimeout(() => {
                            flippedCards.forEach(c => c.card.classList.remove('flip'));
                            flippedCards = [];
                        }, 800);
                    }
                }
            } catch (error) {
                console.error('Error flipping card:', error);
                alert("Something went wrong while flipping the card.");
            }
        }

        function startGame() {
            try {
                matchedPairs = 0;
                flippedCards = [];
                gameContainer.innerHTML = '';
                const shuffledCards = shuffle([...cards]);
                shuffledCards.forEach(imgSrc => {
                    const card = createCard(imgSrc);
                    gameContainer.appendChild(card);
                });
            } catch (error) {
                console.error("Error starting the game:", error);
                alert("Failed to start the memory game.");
            }
        }

        document.addEventListener('DOMContentLoaded', startGame);
    </script>
    <script>
        function showComingSoon() {
            const popup = document.getElementById('comingSoonPopup');
            popup.style.display = 'block';

            // Hide after 2 seconds
            setTimeout(() => {
                popup.style.display = 'none';
            }, 2000);
        }
    </script>
    <script>
              try {
            let lastScrollTop = 0;
            const sidebar = document.querySelector('.sidebar');

            window.addEventListener('scroll', function () {
                let scrollTop = window.scrollY || document.documentElement.scrollTop;

                if (scrollTop > lastScrollTop) {
                    sidebar.classList.add("hide");
                } else {
                    sidebar.classList.remove("hide");
                }

                lastScrollTop = scrollTop <= 0 ? 0 : scrollTop;
            });
        } catch (error) {
            console.error("Error in scroll sidebar handler:", error);
        }

    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

