            background: linear-gradient(to right, #f5f7fa, #c3cfe2);
        }

        .info-card-section {
            font-size: 1rem;
            color: #333;
        }

        .flip-card-container {
            perspective: 1500px;
            max-width: 800px;
        }

        .flip-card {
            width: 100%;
            height: 450px;
            position: relative;
        }

        .flip-card-inner {
            position: relative;
            width: 100%;
            height: 100%;
            transition: transform 1s;
            transform-style: preserve-3d;
        }

        .flip-card-front, .flip-card-back {
            position: absolute;
            width: 100%;
            height: 100%;
            border-radius: 20px;
            backface-visibility: hidden;
            overflow: hidden;
            background: #fff;
        }

        .flip-card.flip .flip-card-inner {
            transform: rotateY(180deg);
        }

        .flip-card-front {
            background: linear-gradient(135deg, #fff, #f3f3f3);
        }

        .flip-card-back {
            background: linear-gradient(135deg, #ffffff, #e6e6e6);
            transform: rotateY(180deg);
        }

        /* Leaf/Folded Corner */
        .card-corner {
            position: absolute;
            top: 0;
            right: 0;
            width: 70px;
            height: 70px;
            background: linear-gradient(135deg, #c3cfe2, #ffffff);
            clip-path: polygon(100% 0, 0 0, 100% 100%);
            z-index: 2;
            box-shadow: -3px 3px 10px rgba(0,0,0,0.1);
        }

        #collectionPopup {
            background-color: #f8f9fa; /* light gray background */
