@model Unique.Models.WhitelistEntry

<style>
    body {
        margin: 0;
        font-family: 'Orbitron', sans-serif;
        background: linear-gradient(to top, #e0f7ff, #ffffff);
        color: #0d0d0d;
        overflow-x: hidden;
    }

    .main-content {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 40px 20px;
        background: rgba(255, 255, 255, 0.3);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
    }

    .apply-container {
        background: rgba(255, 255, 255, 0.7);
        border: 1px solid rgba(0, 0, 0, 0.1);
        backdrop-filter: blur(40px);
        -webkit-backdrop-filter: blur(40px);
        border-radius: 24px;
        padding: 40px 30px;
        box-shadow: 0 0 30px rgba(0, 136, 255, 0.1);
        max-width: 500px;
        width: 100%;
        text-align: center;
    }

        .apply-container h1 {
            font-size: 2rem;
            color: #007acc;
            margin-bottom: 20px;
            text-shadow: 0 0 10px #007acc55;
        }

        .apply-container p {
            font-size: 1.1rem;
            color: #333;
            margin-bottom: 30px;
        }

    .alert-box {
        background-color: #e0f7ff;
        border: 2px solid #00c851;
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 25px;
    }

        .alert-box code {
            background: #f0fbff;
            color: #000;
            padding: 12px 20px;
            border-radius: 10px;
            display: inline-block;
            font-size: 1.2rem;
            word-break: break-all;
        }

    .ref-link {
        margin-top: 10px;
        font-size: 0.95rem;
        word-break: break-word;
    }

    .copy-btn {
        background: #007acc;
        border: none;
        color: white;
        padding: 8px 16px;
        border-radius: 8px;
        margin-top: 10px;
        cursor: pointer;
        font-weight: 600;
        transition: background 0.3s ease;
    }

        .copy-btn:hover {
            background: #005f99;
        }

    .back-home-btn {
        display: inline-block;
        background: rgba(0, 136, 255, 0.1);
        border: 1px solid rgba(0, 136, 255, 0.2);
        color: #007acc;
        padding: 12px 24px;
        font-weight: 600;
        font-size: 1rem;
        border-radius: 14px;
        backdrop-filter: blur(8px);
        transition: all 0.3s ease;
        text-decoration: none;
    }

        .back-home-btn:hover {
            background: rgba(0, 136, 255, 0.2);
            color: #005f99;
            transform: scale(1.05);
        }
</style>

<div class="main-content">
    <div class="apply-container">
        <h1 class="text-success">🎉 Application Successful!</h1>
        <p class="lead">Thank you for applying to the whitelist.</p>

        <div class="alert-box">
            <strong>Your Referral Code:</strong>
            <div class="mt-3">
                <code>@Model.ReferralCode</code>
            </div>

           @*  <div class="ref-link mt-3">
                Referral Link:<br />
                <input type="text" id="refLink" class="form-control mt-2" readonly value="@($"{Request.Scheme}://{Request.Host}/Home/JoinWL?ref=@Model.ReferralCode")" />
                <button class="copy-btn" onclick="copyRefLink()">📋 Copy Link</button>
            </div> *@
        </div>

        <a href="@Url.Action("Index", "Home")" class="back-home-btn mt-4">⬅️ Back to Home</a>
    </div>
</div>

@section Scripts {
    <script>
        function copyRefLink() {
            const input = document.getElementById("refLink");
            input.select();
            input.setSelectionRange(0, 99999); // For mobile devices

            try {
                navigator.clipboard.writeText(input.value).then(function () {
                    alert("Referral link copied to clipboard!");
                });
            } catch (err) {
                document.execCommand("copy");
                alert("Referral link copied (fallback method)!");
            }
        }
    </script>
}
